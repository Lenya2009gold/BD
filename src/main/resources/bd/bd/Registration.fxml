<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="450.0" stylesheets="@./style.css" prefWidth="550.0" style="-fx-background-color: #333;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.bd.controllers.RegistrationController">
    <children>
        <VBox alignment="CENTER" layoutX="200.0" layoutY="50.0" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
            <children>
                <Label text="Registration Form" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" promptText="Full Name" style="-fx-background-color: white;">
                    <VBox.margin>
                        <Insets top="0.0" />
                    </VBox.margin>
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <TextField fx:id="loginField" promptText="Login" style="-fx-background-color: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </TextField>
                <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-color: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" style="-fx-background-color: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                </PasswordField>
                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerButtonAction" text="Зарегестрироваться" style="-fx-background-color: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backButtonAction" text="Вернуться" style="-fx-background-color: white;">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets top="50.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
